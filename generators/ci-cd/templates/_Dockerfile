FROM <%= DOCKER_JAVA_JDK %> as builder
COPY . /usr/src/app
WORKDIR /usr/src/app
<%_ if (buildTool === 'maven') { _%>
RUN ./mvnw package -Pprod
<%_ } _%>
<%_ if (buildTool === 'gradle') { _%>
RUN ./gradlew -Pprod build
<%_ } _%>

FROM <%= DOCKER_JAVA_JRE %>
EXPOSE <%= serverPort %>
COPY --from=builder <% if (buildTool === 'maven') { %>/usr/src/app/target/*.war<% } %><% if (buildTool === 'gradle') { %>/usr/src/app/build/libs/*.war<% } %> app.war
CMD echo "The application will start in ${JHIPSTER_SLEEP}s..." && \
    sleep ${JHIPSTER_SLEEP} && \
    java ${JAVA_OPTS} -Djava.security.egd=file:/dev/./urandom -jar /app.war
